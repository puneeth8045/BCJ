package com.crmindz.assignments.DataTypes.Strings.lab2;

import java.util.Scanner;

/**
 * @author Puneeth This class will split the given date into three different
 *         strings and displays them.
 *
 */
public class ExtractDate {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the date in MM/DD/YYYY Format: ");
		String date = sc.nextLine();
		String[] words = date.split("/");
		for (String w : words) {
			System.out.println(w);
			sc.close();
		}
	}

}
