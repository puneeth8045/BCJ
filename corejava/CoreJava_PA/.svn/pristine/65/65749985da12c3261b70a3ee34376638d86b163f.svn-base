package com.crmindz.assignments.FlowControl.lab9;

import java.util.Scanner;

/**
 * @author Puneeth This class will check whether a right angled triangle can be
 *         formed or not with given sides as input.
 */
public class RightAngledTriangle {
	/**
	 * This method will take three sides as input and checks whether a right
	 * angled triangle can be formed or not.
	 */
	public void hypotenuse() {
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter a side of a triangle:");
		int a = sc.nextInt();
		System.out.print("Enter a side of a triangle:");
		int b = sc.nextInt();
		System.out.print("Enter a hypotenuse side of a triangle:");
		int h = sc.nextInt();
		if (h * h == (a * a + b * b)) {
			System.out.println("Right angle traingle.");
		} else {
			System.out.println("Not a right angle triangle.");
		}
		sc.close();
	}

	public static void main(String[] args) {
		RightAngledTriangle r = new RightAngledTriangle();
		r.hypotenuse();
	}
}
